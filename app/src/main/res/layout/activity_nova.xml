<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main" >

<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novaimageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/p11"
        android:background="#ff59bcff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/nova_title"
        android:id="@+id/novatextView9"
        android:autoText="true"
        android:textColor="#ff122d44"
        android:layout_below="@+id/novaimageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nova_des"
        android:id="@+id/novatextView10"
        android:layout_below="@+id/novatextView9"
        android:layout_alignLeft="@+id/novatextView9"
        android:layout_alignStart="@+id/novatextView9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novaimageButton9"
        android:src="@drawable/mapbutton"
        android:layout_alignTop="@+id/novaimageButton10"
        android:layout_alignLeft="@+id/novatextView10"
        android:layout_alignStart="@+id/novatextView10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novaimageButton10"
        android:src="@drawable/webbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/novaimageButton11"
        android:src="@drawable/commend"
        android:layout_alignTop="@+id/novaimageButton10"
        android:layout_alignRight="@+id/novatextView10"
        android:layout_alignEnd="@+id/novatextView10" />


</RelativeLayout>