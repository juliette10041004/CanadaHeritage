<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/northimageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/p44"
        android:background="#ff59bcff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/north_title"
        android:id="@+id/northtextView9"
        android:autoText="true"
        android:textColor="#ff122d44"
        android:layout_below="@+id/northimageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/north_des"
        android:id="@+id/northtextView10"
        android:layout_below="@+id/northtextView9"
        android:layout_alignLeft="@+id/northtextView9"
        android:layout_alignStart="@+id/northtextView9" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/northimageButton9"
        android:src="@drawable/mapbutton"
        android:layout_alignTop="@+id/northimageButton10"
        android:layout_alignLeft="@+id/northtextView10"
        android:layout_alignStart="@+id/northtextView10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/northimageButton10"
        android:src="@drawable/webbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/northimageButton11"
        android:src="@drawable/commend"
        android:layout_alignTop="@+id/northimageButton10"
        android:layout_alignRight="@+id/northtextView10"
        android:layout_alignEnd="@+id/northtextView10" />


</RelativeLayout>